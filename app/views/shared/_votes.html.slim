table.vote
  tr
    td.up 
      = button_to send("accept_vote_#{resource.class.to_s.underscore}_path", resource), params: {preference: 1}, method: :post, remote: true, format: JSON, class: "accept_vote" do
        = octicon "chevron-up"
  tr
    td.rating = resource.rating
  tr 
    td.down 
      = button_to send("accept_vote_#{resource.class.to_s.underscore}_path", resource), params: {preference: -1}, method: :post, remote: true, format: JSON, class: "accept_vote" do
        = octicon "chevron-down"